{
    "name": "polesphp/json",
    "description": "Type-safe, class-oriented JSON (de)serialization library.",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Philippe Milot",
            "email": "pmilot@turbulent.ca"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "phpdocumentor/type-resolver": "0.5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Poles\\Json\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Poles\\Json\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 src/ tests/",
        "tests": "phpunit"
    }
}
